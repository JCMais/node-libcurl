{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "*": ["types/external/*"] },
    "incremental": true,
    "module": "commonjs",
    // Node.js >= 22 supports almost 100% of ES2024 (https://node.green/#ES2024)
    "target": "es2024",
    "lib": ["es2024"],
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "rootDir": "lib",
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["node_modules/@types", "types/external"],
    "noUnusedLocals": true,
    "importHelpers": true,
    "skipLibCheck": true
  },
  "include": ["lib/**/*"],
  "exclude": ["node_modules"]
}
